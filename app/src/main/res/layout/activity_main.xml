<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="#ECEFF1">
    <View android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1">
    </View>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="5"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="48dp"
        tools:context="com.example.android.myappportfolio.MainActivity">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textSize="24sp"
            android:textStyle="bold"
            android:text="My Nanodegree Apps" />
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="popular movies"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:onClick="genToast"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="stock hawk"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:onClick="genToast"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="build it bigger"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:onClick="genToast"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:text="make your app material"
            android:textAllCaps="true"
            android:onClick="genToast"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:textColor="@android:color/white"
            android:text="go ubiquitous"
            android:textAllCaps="true"
            android:onClick="genToast"/>
        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="capstone"
            android:textColor="@android:color/white"
            android:textAllCaps="true"
            android:onClick="genToast"/>
    </LinearLayout>
    <View android:layout_height="match_parent"
        android:layout_width="0dp"
        android:layout_weight="1">
    </View>

</LinearLayout>

